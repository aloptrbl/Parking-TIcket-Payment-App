<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#2d2d2d"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/finish"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView31"
        android:layout_below="@+id/textView31"
        android:layout_marginStart="14dp"
        android:layout_marginTop="82dp"
        android:background="@drawable/button_background3"
        android:text="finish"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView29"
        android:layout_below="@+id/textView29"
        android:layout_marginTop="12dp"
        android:background="#39c174"
        android:lineSpacingExtra="24sp"
        android:paddingBottom="6dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="6dp"
        android:text="RM 200.00"
        android:textAlignment="textStart"
        android:textColor="@android:color/white" />

    <EditText
        android:id="@+id/duration"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView28"
        android:layout_alignTop="@+id/textView28"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/colorFontPrimary"
        android:ems="10"
        android:inputType="text"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView25"
        android:layout_below="@+id/spinner3"
        android:layout_marginTop="38dp"
        android:fontFamily="@font/opensansregular"
        android:text="Total"
        android:textColor="@color/colorFontPrimary" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="98dp"
        android:fontFamily="@font/opensansregular"
        android:text="Duration"
        android:textColor="@color/colorFontPrimary" />

    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView25"
        android:layout_below="@+id/textView25"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/colorFontPrimary"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView28"
        android:layout_below="@+id/textView28"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/opensansregular"
        android:text="Payment"
        android:textColor="@color/colorFontPrimary" />


</RelativeLayout>