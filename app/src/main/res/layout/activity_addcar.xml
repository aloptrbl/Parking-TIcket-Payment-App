<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <view
        class="android.support.v7.widget.ActionMenuView"
        id="@+id/view3"
        layout_below="@+id/textView12"
        layout_centerHorizontal="true"
        layout_marginTop="89dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2d2d2d"
        android:textAlignment="center" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView23"
        android:headerDividersEnabled="false"
        android:scrollbars="vertical" />

    <EditText
        android:id="@+id/noplate"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/add"
        android:layout_below="@+id/textView19"
        android:backgroundTint="@color/colorFontPrimary"
        android:ems="10"
        android:inputType="text"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/noplate"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/latoregular"
        android:text="Car Plate Number"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <Button
        android:id="@+id/add"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/noplate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_background3"
        android:text="Add"
        android:textColor="@android:color/white" />

    <view
        android:id="@+id/view3"
        class="android.support.v7.widget.ActionMenuView"
        id="@+id/view2"
        layout_alignParentStart="true"
        layout_below="@+id/add"
        layout_marginTop="43dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/add"
        android:layout_marginTop="17dp"
        android:background="@drawable/gradient2" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/view3"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="15dp"
        android:text="Car List"
        android:textColor="@android:color/white"
        android:textSize="20sp" />


</RelativeLayout>