
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundPrimary"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.glancelab.ptps.LoginActivity">


    <!-- Login progress -->
    <EditText
        android:id="@+id/repassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/home"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="18dp"
        android:drawableBottom="@color/colorFontTertiary"
        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:textColor="@android:color/white"
        android:textColorHint="@color/colorFontTertiary" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/repassword"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="44dp"
        android:drawableBottom="@color/colorFontTertiary"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@android:color/white"
        android:textColorHint="@color/colorFontTertiary" />

    <EditText
        android:id="@+id/emailaddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/password"
        android:layout_alignParentEnd="true"
        android:drawableBottom="@color/colorFontTertiary"
        android:ems="10"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        android:textColor="@android:color/white"
        android:textColorHint="@color/colorFontTertiary" />

    <EditText
        android:id="@+id/phonenumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/emailaddress"
        android:layout_alignParentStart="true"
        android:drawableBottom="@color/colorFontTertiary"
        android:ems="10"
        android:hint="Phone Number"
        android:inputType="textPersonName|phone"
        android:textColor="@android:color/white"
        android:textColorHint="@color/colorFontTertiary" />

    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp"
        android:fontFamily="@font/fredoka"
        android:text="ParkinGO"
        android:textColor="@color/colorFontPrimary"
        android:textSize="50dp" />

    <Button
        android:id="@+id/home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="17dp"
        android:background="@drawable/gradient"
        android:fontFamily="@font/robotoregular"
        android:text="@string/action_register"
        android:textColor="@color/colorFontPrimary"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/id"
        android:layout_marginBottom="78dp"
        android:layout_toEndOf="@+id/imageView"
        android:fontFamily="@font/robotoregular"
        android:text="parking made simple"
        android:textColor="@color/colorFontTertiary"
        android:textSize="18dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="70dp"
        android:layout_height="150dp"
        android:layout_above="@+id/id"
        android:layout_marginBottom="45dp"
        android:layout_toStartOf="@+id/textView"
        app:srcCompat="@drawable/r" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView2"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="23dp"
        android:layout_marginEnd="10dp"
        android:text="Already have account?"
        android:textColor="@color/colorFontPrimary" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home"
        android:layout_toEndOf="@+id/textView5"
        android:text="Sign In"
        android:textColor="@color/colorFontTertiary" />

    <EditText
        android:id="@+id/id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/name"
        android:layout_alignParentStart="true"
        android:drawableBottom="@color/colorFontTertiary"
        android:ems="10"
        android:hint="Identification Id/Passport"
        android:inputType="textPersonName"
        android:textColor="@android:color/white"
        android:textColorHint="@color/colorFontTertiary" />

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/emailaddress"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="42dp"
        android:drawableBottom="@color/colorFontTertiary"
        android:ems="10"
        android:hint="Full Name"
        android:inputType="textPersonName"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textColorHint="@color/colorFontTertiary" />

    <Button
        android:id="@+id/button3"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:layout_above="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginBottom="14dp"
        android:background="@drawable/left"
        android:onClick="back" />

</RelativeLayout>
